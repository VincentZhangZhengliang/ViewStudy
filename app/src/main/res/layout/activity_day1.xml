<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.topzrt.viewstudy.Day1Activity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_coordinates"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="坐标系" />

            <TextView
                android:id="@+id/id_arc"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="角度圆弧" />

            <TextView
                android:id="@+id/id_color"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="颜色" />

            <TextView
                android:id="@+id/id_category"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="分类和流程" />

            <TextView
                android:id="@+id/id_basic_shape"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="绘制基本图形" />

            <TextView
                android:id="@+id/id_canvas"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="画布操作" />

            <TextView
                android:id="@+id/id_pic_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="图片文字" />

            <TextView
                android:id="@+id/id_path_basic"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="path基本操作" />

            <TextView
                android:id="@+id/id_bezier"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="贝塞尔曲线" />

            <TextView
                android:id="@+id/id_path_end"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="path完结篇" />

            <TextView
                android:id="@+id/id_path_advance"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="path玩出花样" />

            <TextView
                android:id="@+id/id_matrix_basic"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Matrix原理" />

            <TextView
                android:id="@+id/id_matrix_detail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Matrix详解" />

            <TextView
                android:id="@+id/id_matrix_camera"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Matrix Camera" />

            <TextView
                android:id="@+id/id_touch_event"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="事件分发机制原理" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
